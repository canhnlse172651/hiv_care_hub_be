enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}

enum OrderItemType {
  APPOINTMENT_FEE
  MEDICINE
  TEST
  CONSULTATION
  TREATMENT
}

enum OrderStatus {
  PENDING
  PAID
}

// --- ORDER MODELS ---
model Order {
  id                 Int               @id @default(autoincrement())
  userId             Int
  user               User              @relation(fields: [userId], references: [id])
  appointmentId      Int?
  appointment        Appointment?      @relation(fields: [appointmentId], references: [id])
  patientTreatmentId Int?
  patientTreatment   PatientTreatment? @relation(fields: [patientTreatmentId], references: [id])
  

  // Order info
  orderCode   String      @unique @db.VarChar(100)
  totalAmount Decimal     @db.Decimal(10, 2)
  notes       String?     @db.Text
  orderStatus OrderStatus @default(PENDING)

  // Timestamps
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  expiredAt DateTime?

  // Relations
  orderDetails OrderDetail[]
  payments     Payment[]

  @@index([userId])
  @@index([expiredAt])
  @@index([orderCode])
}

model OrderDetail {
  id      Int   @id @default(autoincrement())
  orderId Int
  order   Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  // Item info
  type        OrderItemType
  referenceId Int? // ID của item (medicine, test, etc.)
  name        String        @db.VarChar(500)
  quantity    Int           @default(1)
  unitPrice   Decimal       @db.Decimal(10, 2)
  totalPrice  Decimal       @db.Decimal(10, 2)

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([orderId])
}

// --- PAYMENT ENUMS ---

enum PaymentMethod {
  CASH
  BANK_TRANSFER
}

// --- PAYMENT MODELS ---
model Payment {
  id      Int   @id @default(autoincrement())
  orderId Int
  order   Order @relation(fields: [orderId], references: [id])

  // Payment info
  amount               Decimal       @db.Decimal(10, 2)
  method               PaymentMethod
  status               PaymentStatus @default(PENDING)
  transactionCode      String?       @unique @db.VarChar(100)
  gatewayTransactionId String?       @db.VarChar(100)
  gatewayResponse      Json?
  // Timestamps
  paidAt               DateTime?
  createdAt            DateTime      @default(now())
  updatedAt            DateTime      @updatedAt

  @@index([orderId])
  @@index([status])
  @@index([transactionCode])
}

model PaymentTransaction {
  id                 Int      @id @default(autoincrement())
  gateway            String   @db.VarChar(100)
  transactionDate    DateTime @db.Date
  accountNumber      String?  @db.VarChar(100)
  subAccount         String?  @db.VarChar(100)
  amountIn           Decimal  @db.Decimal(10, 2)
  amountOut          Decimal  @db.Decimal(10, 2)
  accumulated        Decimal  @db.Decimal(10, 2)
  code               String?  @db.VarChar(100)
  transactionContent String?  @db.VarChar(100)
  referenceNumber    String?  @db.VarChar(100)
  body               String?  @db.Text
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

